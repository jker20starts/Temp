@model IEnumerable<FreshFoodHTH.Models.EFplus.flatSanPham>

<div class="col-lg-4 col-md-6">
    <div class="latest-product__text">
        <h4>Sản phẩm mới nhất</h4>
        <div class="latest-product__slider owl-carousel">
            <div class="latest-prdouct__slider__item">
                @{ var count = 1;}

                @foreach (var item in Model)
                {

                    <a href="/ShopDetail/Index/@item.IDSanPham" class="latest-product__item">
                        <div class="latest-product__item__pic">
                            <img src="~/Areas/Admin/Content/Photos/@item.HinhAnh" alt="" style="width:130px; height:110px">
                        </div>
                        <div class="latest-product__item__text">
                            <h6>@item.name</h6>
                            <span>@item.price VNĐ</span>
                        </div>
                    </a>
                    if (count == Model.Count())
                    {
                        break;
                    }
                    if (++count % 3 == 1)
                    {
                    @:</div><div class="latest-prdouct__slider__item">




                    }
                }
            </div>
        </div>
    </div>
</div>

