@model FreshFoodHTH.Models.EFplus.flatNguoiDungMoi

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section header
{
    Người dùng - Thêm người dùng
}

@using (Html.BeginForm("Create", "NguoiDungAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-10">
                <label for="exampleInputEmail1">Username</label>
                <input type="text" class="form-control" name="username" placeholder="Nhập username ..." value=" @Html.DisplayFor(model => model.Username)" required>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label for="exampleInputEmail1">Tên </label>
                <input type="text" class="form-control" name="ten" placeholder="Nhập tên ..." value=" @Html.DisplayFor(model => model.Ten)" required>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label for="exampleInputEmail1">Điện thoại</label>
                <input type="text" class="form-control" name="dienthoai" placeholder="Nhập số điện thoại ..." value=" @Html.DisplayFor(model => model.DienThoai)" required>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label for="exampleInputEmail1">Email</label>
                <input type="text" class="form-control" name="email" placeholder="Nhập email ..." value=" @Html.DisplayFor(model => model.Email)" required>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label for="exampleInputEmail1">Địa chỉ</label>
                <input type="text" class="form-control" name="diachi" placeholder="Nhập địa chỉ ..." value=" @Html.DisplayFor(model => model.DiaChi)" required>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label for="exampleInputFile">Hình đại diện</label>
                <input type="file" id="avatar" name="avatar" required>
            </div>
        </div>

        <hr />
        <div class="form-group">
            <div class="col-md-10">
                <label for="exampleInputEmail1">Mật khẩu</label>
                <input type="password" class="form-control" name="password" placeholder="Nhập mật khẩu ..." value=" @Html.DisplayFor(model => model.Password)" required>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label for="exampleInputEmail1">Xác nhận mật khẩu</label>
                <input type="password" class="form-control" name="confirm" placeholder="Xác nhận mật khẩu ..." value=" @Html.DisplayFor(model => model.Confirm)" required>
                <p style="font-size:15px; color:red; font-style:italic"><b>@ViewBag.ConfirmNewPassword</b></p>
            </div>
        </div>

        <button type="submit" class="btn btn-primary" style="width:110px">
            <a class="fa fa-save"></a> &nbsp;Lưu lại
        </button>
        <button type="button" class="btn btn-warning" style="width:110px">
            <a class="fa fa-th-list"></a> &nbsp;
            @Html.ActionLink("Danh sách", "Index")
        </button>
    </div>
}