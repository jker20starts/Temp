@model FreshFoodHTH.Models.EF.TKThanhToanNguoiDung

@{
    Layout = null;

    var idnd = (Guid)Session["IDUSER_SESSION"];
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>FastFood HTH | Đăng nhập</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.4 -->

    <link href="~/Assets/Admin/LTE/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- Font Awesome Icons -->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <!-- Theme style -->
    <link href="~/Assets/Admin/LTE/dist/css/AdminLTE.min.css" rel="stylesheet" type="text/css" />
    <!-- iCheck -->
    <link href="~/Assets/Admin/LTE/plugins/iCheck/square/blue.css" rel="stylesheet" type="text/css" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="login-page" style="background-image: url(/Assets/Admin/Images/background.png); background-repeat: repeat-x repeat-y">
    <div class="login-box" style="box-shadow: 0px 0px 30px grey">
        <div class="login-box-body">
            <img src="~/Areas/Admin/Content/Photos/@Model.TaiKhoanThanhToan.Logo" style="margin-left:auto; margin-right:auto; display:block; width:100px; height:100px" />
            <br />
            <p class="login-box-msg" style="font-size:15px; color:navy"><b>Nhập mật khẩu để thanh toán!</b></p>
            @using (Html.BeginForm("CheckLoginTaiKhoanThanhToan", "Checkout", new { idtktt = Model.IDTaiKhoan }))
            {
                <div style="justify-content: center; display: flex;">Số dư tài khoản: <b><span>@String.Format("{0:n0}", Model.TongTien) VNĐ</span></b></div><br />
                if (Model.TongTien >= (decimal)ViewBag.TongTienDonHang)
                {
                    <div class="form-group has-feedback">
                        <input name="inputPassword" type="password" class="form-control" placeholder="Mật khẩu..." />
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <button type="submit" class="btn btn-success btn-block btn-flat" style="border-radius:3px; color:white">Xác nhận thanh toán</button>
                        </div><!-- /.col -->
                    </div>
                }
                else
                {
                    <label>Số dư tài khoản không đủ để thực hiện giao dịch!</label>
                    <button class="btn-info">@Html.ActionLink("Trở lại", "Index", new { id = idnd })</button>
                }

            }

        </div><!-- /.login-box-body -->
    </div><!-- /.login-box -->
    <!-- jQuery 2.1.4 -->
    <script src="~/Assets/Admin/LTE/plugins/jQuery/jQuery-2.1.4.min.js" type="text/javascript"></script>
    <!-- Bootstrap 3.3.2 JS -->
    <script src="~/Assets/Admin/LTE/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <!-- iCheck -->
    <script src="~/Assets/Admin/LTE/plugins/iCheck/icheck.min.js" type="text/javascript"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
</body>
</html>


