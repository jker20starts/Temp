@model FreshFoodHTH.Models.EF.NguoiDung

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section header
{
    Người dùng - Chỉnh sửa thông tin ( @Model.Username )
}

@using (Html.BeginForm("Edit", "NguoiDungAdmin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IDNguoiDung)

        <div class="form-group">
            <div class="col-md-10">
                <label for="exampleInputEmail1">Tên </label>
                <input type="text" class="form-control" name="ten" placeholder="Nhập tên ..." value=" @Html.DisplayFor(model => model.Ten)" required>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label for="exampleInputEmail1">Điện thoại</label>
                <input type="text" class="form-control" name="dienthoai" placeholder="Nhập số điện thoại ..." value=" @Html.DisplayFor(model => model.DienThoai)" required>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label for="exampleInputEmail1">Email</label>
                <input type="text" class="form-control" name="email" placeholder="Nhập email ..." value=" @Html.DisplayFor(model => model.Email)" required>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label for="exampleInputEmail1">Địa chỉ</label>
                <input type="text" class="form-control" name="diachi" placeholder="Nhập địa chỉ ..." value=" @Html.DisplayFor(model => model.DiaChi)" required>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <label for="exampleInputFile">Hình đại diện</label>
                <input type="file" id="avatar" name="avatar">
            </div>
        </div>


        <button type="submit" class="btn btn-primary btn-admin" style="width:110px">
            <a class="fa fa-save"></a> &nbsp;Lưu lại
        </button>
        <button type="button" class="btn btn-warning btn-admin" style="width:110px">
            <a class="fa fa-th-list"></a> &nbsp;
            @Html.ActionLink("Danh sách", "Index")
        </button>
    </div>
}