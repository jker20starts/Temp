@{
    FreshFoodHTH.Models.EF.FreshFoodDBContext db = new FreshFoodHTH.Models.EF.FreshFoodDBContext();
    FreshFoodHTH.Models.EF.NguoiDung user;

    try
    {
        Guid iduser = (Guid)Session["IDUSER_SESSION"];
        user = db.NguoiDungs.Find(Session["IDUSER_SESSION"]);
    }
    catch
    {
        user = null;
    }
}

<div class="col-lg-3">
    <div class="header__cart">
        @if (user != null)
        {
            <ul>
                @*<li><a href="#"><i class="fa fa-heart"></i> <span>0</span></a></li>*@
                <li><a href="/Client/ShoppingCart/Index/@Session["IDUSER_SESSION"]"><i class="fa fa-shopping-cart"></i> <span>@user.ChiTietGioHangs.Count()</span></a></li>
            </ul>
            <div class="header__cart__price">Tổng giá trị: <span>@String.Format("{0:n0}", user.TongTienGioHang) VNĐ</span></div>
        }
        else
        {
            <ul>
                @*<li><a href="#"><i class="fa fa-heart"></i> <span>0</span></a></li>*@
                <li><a href="/Client/ShoppingCart/Index/@Session["IDUSER_SESSION"]"><i class="fa fa-shopping-cart"></i> <span>0</span></a></li>
            </ul>
            <div class="header__cart__price">Tổng giá trị: <span>0 VNĐ</span></div>
        }
    </div>
</div>