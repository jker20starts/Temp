<!-- Product Details Section Begin -->
<section class="product-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="product__details__pic">
                    <div class="product__details__pic__item">
                        <img class="product__details__pic__item--large"
                             src="~/Areas/Admin/Content/Photos/@Session["AVATAR_SESSION"]" alt="">
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="product__details__text">
                    @using (Html.BeginForm("Edit", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.IDNguoiDung)

                            <div class="form-group">
                                <div class="col-md-10">
                                    <label for="exampleInputEmail1"><b>Tên đăng nhập</b></label>
                                    <input type="text" class="form-control" value=" @Html.DisplayFor(model => model.Username)" readonly>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-10">
                                    <label for="exampleInputEmail1"><b>Họ tên</b></label>
                                    <input type="text" class="form-control" name="ten" placeholder="Nhập tên ..." value=" @Html.DisplayFor(model => model.Ten)" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-10">
                                    <label for="exampleInputEmail1"><b>Số điện thoại</b></label>
                                    <input type="text" class="form-control" name="dienthoai" placeholder="Nhập số điện thoại ..." value=" @Html.DisplayFor(model => model.DienThoai)" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-10">
                                    <label for="exampleInputEmail1"><b>Email</b></label>
                                    <input type="text" class="form-control" name="email" placeholder="Nhập email ..." value=" @Html.DisplayFor(model => model.Email)" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-10">
                                    <label for="exampleInputEmail1"><b>Địa chỉ</b></label>
                                    <input type="text" class="form-control" name="diachi" placeholder="Nhập địa chỉ ..." value=" @Html.DisplayFor(model => model.DiaChi)" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-10">
                                    <label for="exampleInputFile"><b>Ảnh đại diện</b></label><br />
                                    <input type="file" id="avatar" name="avatar">
                                </div>
                            </div>
                            <div class="form-group">
                                <table>
                                    <tr>
                                        <td>
                                            <div class="col-md-10">
                                                <button type="submit" class="site-btn" style="text-align:left; width:145px"><i class="fa fa-save"></i>&nbsp; Lưu lại</button>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="col-md-10">
                                                <button type="button" class="site-btn" style="text-align:left; width:145px"><i class="fa fa-reply"></i>&nbsp; @Html.ActionLink("Huỷ bỏ", "Index", "Account", new { id = Session["IDUSER_SESSION"] }, null)</button>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <hr />
        </div>
    </div>
</section>
<!-- Product Details Section End -->
