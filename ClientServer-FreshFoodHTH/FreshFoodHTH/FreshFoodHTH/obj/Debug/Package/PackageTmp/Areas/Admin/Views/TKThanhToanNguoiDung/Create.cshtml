@model FreshFoodHTH.Models.EF.TKThanhToanNguoiDung

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section header
{
    Thêm tài khoản thanh toán người dùng - Thêm Tài khoản thanh toán người dùng
}



@using (Html.BeginForm("Create", "TKThanhToanNguoiDung", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <table style="width:100%">
            <col style="width:25%">
            <col style="width:25%">
            <col style="width:25%">
            <col style="width:25%">
            <tr>
                <td colspan="2">
                    <div class="form-group">
                        <div class="col-md-10">
                            <label for="exampleInputEmail1">Tên tài khoản</label>
                            <input type="text" class="form-control" name="taikhoan" placeholder="Nhập tên tài khoản ..." value=" @Html.DisplayFor(model => model.TaiKhoan    )" style="width:740px" required>
                        </div>
                    </div>
                    <br />
                </td>
                <td>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label for="exampleInputEmail1">User</label><br />
                            @Html.DropDownList("IDTaiKhoan", (IEnumerable<SelectListItem>)ViewBag.TaiKhoan, "  --  Chọn tài khoản  --  ", new { @class = "combobox", @style = "height:32px; width:200px; required" })

                        </div>
                    </div>
                    <br />
                </td>
                <td>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label for="exampleInputEmail1">Người dùng</label><br />
                            @Html.DropDownList("IDNguoiDung", (IEnumerable<SelectListItem>)ViewBag.NguoiDung, "  --  Chọn người dùng  --  ", new { @class = "combobox", @style = "height:32px; width:200px; required" })
                        </div>
                    </div>
                    <br />
                </td>
            </tr>
            <tr>
                <td>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label for="exampleInputEmail1">Password</label><br />
                            <input type="text" class="form-control" name="Password" placeholder="Nhập Pass ..." value=" @Html.DisplayFor(model => model.Password)" required>
                        </div>
                    </div>
                    <br />
                </td>
                <td>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label for="exampleInputEmail1">Tổng tiền</label><br />
                            <input type="number" step="1" min="0" class="form-control" name="tongtien" placeholder="Nhập tổng tiền  ..." value=" @Html.DisplayFor(model => model.TongTien)" required>
                        </div>
                    </div>
                    <br />
                </td>
            </tr>
        </table>

        <br />

        <button type="submit" class="btn btn-primary" style="width:110px">
            <i class="fa fa-save"></i> &nbsp;Lưu lại
        </button>
        <button type="button" class="btn btn-warning" style="width:110px">
            <i class="fa fa-th-list"></i> &nbsp;
            @Html.ActionLink("Danh sách", "Index")
        </button>
    </div>
}