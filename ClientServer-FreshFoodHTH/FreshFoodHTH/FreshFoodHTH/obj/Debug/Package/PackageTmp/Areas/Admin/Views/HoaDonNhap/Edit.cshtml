@model FreshFoodHTH.Models.EF.HoaDonNhap

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@section header
{
    Hóa đơn nhập - Sửa hóa đơn nhập (#@Model.MaSo.ToString("D6"))
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IDHoaDonNhap)

        <div class="form-group">
            <div class="col-md-10">
                <label for="exampleInputEmail1">Nhà cung cấp</label><br />
                <input type="text" class="form-control" value=" @Html.DisplayFor(model => model.NhaCungCap.Ten)" readonly>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <label for="exampleInputEmail1">Ghi chú</label><br />
                <input type="text" class="form-control" name="ghichu" placeholder="Nhập ghi chú ..." value=" @Html.DisplayFor(model => model.GhiChu)">
            </div>
        </div>

        <button type="submit" class="btn btn-primary" value="Create" style="width:110px">
            <i class="fa fa-save"></i> &nbsp;Lưu lại
        </button>
        <button type="button" class="btn btn-warning" style="width:110px">
            <i class="fa fa-arrow-left"></i> &nbsp;
            @Html.ActionLink("Trở về", "Index")
        </button>
    </div>
}