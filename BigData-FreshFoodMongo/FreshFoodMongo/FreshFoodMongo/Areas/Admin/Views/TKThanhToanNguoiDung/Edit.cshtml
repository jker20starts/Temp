@model FreshFoodMongo.Models.DTO.TKThanhToanNguoiDung

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section header
{
    Tài khoản thanh toán - Chỉnh sửa thông tin ( @Model.TaiKhoan)
}

@using (Html.BeginForm("Edit", "TKThanhToanNguoiDung", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.IDTaiKhoan)
    @Html.HiddenFor(model => model.IDNguoiDung)

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <table style="width:100%">
            <col style="width:25%">
            <col style="width:25%">
            <col style="width:25%">
            <col style="width:25%">
            <tr>
                <td>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label for="exampleInputEmail1">Tài khoản </label>
                            <input type="text" class="form-control" name="taikhoan" placeholder="Tài khoản ..." value=" @Html.DisplayFor(model => model.TaiKhoan)" style="width:332px" required>
                        </div>
                    </div>
                    <br />
                </td>
                <td>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label for="exampleInputEmail1">Password</label>
                            <input type="text" class="form-control" name="Password" placeholder="Password ..." value=" @Html.DisplayFor(model => model.Password)" style="width:332px" required>
                        </div>
                    </div>
                    <br />
                </td>

            </tr>
            <tr>
                <td>
                    <div class="form-group">
                        <div class="col-md-10">
                            <label for="exampleInputEmail1">Tổng tiền</label><br />
                            <input type="text" class="form-control" name="tongtien" placeholder="Nhập đơn vị tính ..." value=" @Html.DisplayFor(model => model.TongTien)" required>
                        </div>
                    </div>
                    <br />
                </td>
        </table>


        <br />

        <button type="submit" class="btn btn-primary btn-admin" style="width:110px">
            <a class="fa fa-save"></a> &nbsp;Lưu lại
        </button>
        <button type="button" class="btn btn-warning btn-admin" style="width:110px">
            <a class="fa fa-th-list"></a> &nbsp;
            @Html.ActionLink("Danh sách", "Index")
        </button>
    </div>
}
