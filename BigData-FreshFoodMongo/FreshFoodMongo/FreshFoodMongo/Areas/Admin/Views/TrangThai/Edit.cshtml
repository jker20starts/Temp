@model FreshFoodMongo.Models.DTO.TrangThai

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@section header
{
    Trạng thái đơn hàng - Chỉnh sửa (@Model.TenTrangThai)
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IDTrangThai)

        <div class="form-group">
            <div class="col-md-10">
                <label for="exampleInputEmail1">Tên trạng thái thanh toán</label>
                <input type="text" class="form-control" name="ten" placeholder="Nhập tên trạng thái thanh toán ..." value=" @Html.DisplayFor(model => model.TenTrangThai)" required>
            </div>
        </div>
        <br />


        <button type="submit" class="btn btn-primary" style="width:110px">
            <a class="fa fa-save"></a> &nbsp;Lưu lại
        </button>
        <button type="button" class="btn btn-warning" style="width:110px">
            <a class="fa fa-th-list"></a> &nbsp;
            @Html.ActionLink("Danh sách", "Index")
        </button>
    </div>
}
