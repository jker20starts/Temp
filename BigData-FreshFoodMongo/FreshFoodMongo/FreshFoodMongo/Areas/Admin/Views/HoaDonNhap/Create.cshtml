@model FreshFoodMongo.Models.DTO.HoaDonNhap

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@section header
{
    Hóa đơn nhập - Thêm hóa đơn nhập
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-10">
                <label for="exampleInputEmail1">Nhà cung cấp</label><br />
                @Html.DropDownList("IDNhaCungCap", (IEnumerable<SelectListItem>)ViewBag.ListNhaCungCap, "  --  Nhà cung cấp  --  ", new { @class = "combobox", @style = "height:32px; width:332px; required" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <label for="exampleInputEmail1">Ghi chú</label><br />
                <input type="text" class="form-control" name="ghichu" placeholder="Nhập ghi chú ..." value=" @Html.DisplayFor(model => model.GhiChu)">
            </div>
        </div>
        <br />

        <button type="submit" class="btn btn-primary" value="Create" style="width:110px">
            <i class="fa fa-save"></i> &nbsp;Lưu lại
        </button>
        <button type="button" class="btn btn-warning" style="width:110px">
            <i class="fa fa-arrow-left"></i> &nbsp;
            @Html.ActionLink("Trở về", "Index")
        </button>
    </div>
}

