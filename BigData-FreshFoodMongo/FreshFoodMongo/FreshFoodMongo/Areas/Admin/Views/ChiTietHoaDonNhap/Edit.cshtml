@model FreshFoodMongo.Models.DTO.ChiTietHoaDonNhap

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

    FreshFoodMongo.Models.DAO.CommonDAO commonDao = new FreshFoodMongo.Models.DAO.CommonDAO();
}

@section header
{
    Hoá đơn nhập (#@commonDao.getRf_MaSoHoaDonNhap(Model.IDHoaDonNhap)) - Sửa chi tiết hoá đơn (@commonDao.getRf_TenSanPham(Model.IDSanPham)
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-10">
                <label for="exampleInputEmail1">Sản phẩm nhập</label><br />
                <input type="text" class="form-control" value=" @Html.Raw(commonDao.getRf_TenSanPham(Model.IDSanPham))" readonly>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <label for="exampleInputEmail1">Số lượng</label><br />
                <input type="number" min="1" step="1" class="form-control" name="soluong" placeholder="Nhập số lượng ..." value=" @Html.DisplayFor(model => model.SoLuong)" required>
            </div>
        </div>
        <br />
        <button type="submit" class="btn btn-primary" value="Create" style="width:110px">
            <i class="fa fa-save"></i> &nbsp;Lưu lại
        </button>
        <button type="button" class="btn btn-warning" style="width:110px">
            <a class="fa fa-arrow-left"></a> &nbsp;
            @Html.ActionLink("Trở về", "Details", "HoaDonNhap", new { id = Model.IDHoaDonNhap }, null)
        </button>
    </div>
}
