@model FreshFoodMongo.Models.DTOplus.flatNguoiDungMoi

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>FastFood HTH | Đăng nhập</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.4 -->

    <link href="~/Assets/Admin/LTE/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- Font Awesome Icons -->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <!-- Theme style -->
    <link href="~/Assets/Admin/LTE/dist/css/AdminLTE.min.css" rel="stylesheet" type="text/css" />
    <!-- iCheck -->
    <link href="~/Assets/Admin/LTE/plugins/iCheck/square/blue.css" rel="stylesheet" type="text/css" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="login-page" style="        background-image: url(/Assets/Admin/Images/background.png); background-repeat: repeat-x repeat-y">
    <div class="login-box" style="box-shadow: 0px 0px 30px grey">
        <div class="login-box-body">
            <img src="~/Assets/Admin/Images/logofull.png" style="margin-left:auto; margin-right:auto; display:block; width:100px; height:70px" />
            <br />
            <p class="login-box-msg" style="font-size:15px; color:navy"><b>Đăng ký thành viên FreshFood HTH</b></p>
            @using (Html.BeginForm("Register", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <table width="100%">
                    <tr>
                        <td><label for="exampleInputEmail1">Username</label></td>
                        <td><input type="text" class="form-control" name="username" placeholder="..." value=" @Html.DisplayFor(model => model.Username)" required></td>
                    </tr>
                    <tr>
                        <td><label for="exampleInputEmail1">Họ tên</label></td>
                        <td><input type="text" class="form-control" name="ten" placeholder="..." value=" @Html.DisplayFor(model => model.Ten)" required></td>
                    </tr>
                    <tr>
                        <td><label for="exampleInputEmail1">Điện thoại</label></td>
                        <td><input type="text" class="form-control" name="dienthoai" placeholder="..." value=" @Html.DisplayFor(model => model.DienThoai)" required></td>
                    </tr>
                    <tr>
                        <td><label for="exampleInputEmail1">Email</label></td>
                        <td><input type="text" class="form-control" name="email" placeholder="..." value=" @Html.DisplayFor(model => model.Email)" required></td>
                    </tr>
                    <tr>
                        <td><label for="exampleInputEmail1">Địa chỉ</label></td>
                        <td><input type="text" class="form-control" name="diachi" placeholder="..." value=" @Html.DisplayFor(model => model.DiaChi)" required></td>
                    </tr>
                </table>
                <hr />
                <table>
                    <tr>
                        <td><label for="exampleInputFile">Avatar</label></td>
                        <td><input type="file" id="avatar" name="avatar" required></td>
                    </tr>
                    <tr>
                        <td><label for="exampleInputEmail1">Mật khẩu</label></td>
                        <td><input type="password" class="form-control" name="password" placeholder="..." value=" @Html.DisplayFor(model => model.Password)" required></td>
                    </tr>
                    <tr>
                        <td><label for="exampleInputEmail1">Xác nhận</label></td>
                        <td>
                            <input type="password" class="form-control" name="confirm" placeholder="..." value=" @Html.DisplayFor(model => model.Confirm)" required>
                            <p style="font-size:15px; color:red; font-style:italic"><b>@ViewBag.ConfirmNewPassword</b></p>
                        </td>
                    </tr>
                </table>

                <div class="row">
                    <div class="col-xs-12">
                        <button type="submit" class="btn btn-success btn-block btn-flat" style="border-radius:3px; color:white">Đăng ký</button>
                    </div><!-- /.col -->
                </div>
            }

        </div><!-- /.login-box-body -->
    </div><!-- /.login-box -->
    <!-- jQuery 2.1.4 -->
    <script src="~/Assets/Admin/LTE/plugins/jQuery/jQuery-2.1.4.min.js" type="text/javascript"></script>
    <!-- Bootstrap 3.3.2 JS -->
    <script src="~/Assets/Admin/LTE/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <!-- iCheck -->
    <script src="~/Assets/Admin/LTE/plugins/iCheck/icheck.min.js" type="text/javascript"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
</body>
</html>


