    FreshFoodMongo.Models.DAO.CommonDAO commonDao = new FreshFoodMongo.Models.DAO.CommonDAO();
    var idKH = (Guid)Session["IDUSER_SESSION"];
    var khachHang = baseDao.getDataNguoiDung().FirstOrDefault(x => x.IDNguoiDung == idKH);
    var lstDonHang = baseDao.getDataDonHang().Where(x=>x.IDKhachHang == idKH);

    int i;
    if (Model.Count == ViewBag.psize)
    {
        i = Model.PageNumber * Model.Count - Model.Count;
    }
    else
    {
        i = ViewBag.Count - Model.Count;
    }

    string GetSTT()
    {
        i++;
        return Convert.ToString(i);
    }
}

